<!DOCTYPE HTML>
<html>

<head>
    <title>SkateboardMarketTracker</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
      

<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css" integrity="sha384-BVYiiSIFeK1dGmJRAkycuHAHRg32OmUcww7on3RYdg4Va+PmSTsz/K68vbdEjh4u" crossorigin="anonymous">
      
</head>
    
<header>

    <nav class="navbar navbar-light">
    <div class="container-fluid">
        
        <div class="navbar-header">
            <a href="main" class="navbar-brand"><b>Skateboard Market Tracker</b></a>
            <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#dropdown">
             <span class="icon-bar"></span>
             <span class="icon-bar"></span>
             <span class="icon-bar"></span>
            </button>
                 
</div>

        
<div id="dropdown" class="collapse navbar-collapse">
            
    <ul class="nav navbar-nav">
        <li><a href="main">Home</a></li>
        <li><a href="news">News</a></li>
        <li><a href="for_sale">For Sale</a></li>
        <li><a href="wanted">Wanted</a></li>
    </ul>
    
    <ul class="nav navbar-nav navbar-right">
      <li><a href="#">Follow Us On INSTAGRAM <i class="fa fa-instagram"></i></a></li>
    </ul>
    
    </div>
    </div>
      
</nav>

    
</header>

<body>
    
<div class="container" id="newlisting">
    
    <div class="container">

<h3>Create a new listing here</h3>
    


    <%= form_for :listing do |e| %>

      <p>
    <%= e.label :item_name %>
    <%= e.text_field :item_name , placeholder:"Item Name" %>
          </p>
    
      <p>
  <%= e.label :description %>
    <%= e.text_field :description , placeholder:"Describe Your Item Here"%>
      </p>

        <p>
  <%= e.label :price %>
    <%= e.text_field :price , placeholder:"Price"%>
      </p>
      
      <p>
    <%= e.submit %>
      </p>
      
    <% end %>
    
    </div>
    </div>

</body>
    
</html>
