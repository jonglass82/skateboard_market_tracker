<!DOCTYPE html>
<html>
  <head>
    <title>Sk8er Tr8der</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
      

<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css" integrity="sha384-BVYiiSIFeK1dGmJRAkycuHAHRg32OmUcww7on3RYdg4Va+PmSTsz/K68vbdEjh4u" crossorigin="anonymous">
      
</head>
    
<header>

    <nav class="navbar navbar-light">
    <div class="container-fluid">
        
        <div class="navbar-header">
            <a href="main" class="navbar-brand"><b>Sk8er Tr8der</b></a>
            <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#dropdown">
             <span class="icon-bar"></span>
             <span class="icon-bar"></span>
             <span class="icon-bar"></span>
            </button>
                 
        </div>

        
<div id="dropdown" class="collapse navbar-collapse">
            
    <ul class="nav navbar-nav">
        <li><a href="main">Home</a></li>
        <li><a href="articles">Blog</a></li>
        <li><a href="for_sale">For Sale</a></li>
        <li><a href="wanted">Wanted</a></li>
    </ul>
    
    <ul class="nav navbar-nav navbar-right">
      <li><a href="#">Follow Us On INSTAGRAM <i class="fa fa-instagram"></i></a></li>
    </ul>
    
    </div>
    </div>
      
</nav>

    
</header>


<body>

  <div class="container">
      <div id="inventory" class="container">

        <div class="inventory-title">

    <h1>Current Inventory:</h1> 


<button><a href="new_listing">Create a new listing</a></button>

</div>

        <% @listings.each do |listing| %>

            <div class="container">

        <div id="row">
            <div class="col-sm-4">

        <% if listing.image.attached? %>

        <div class="card" style="width: 18rem;">
  <img class="img-thumbnail" src="<%= url_for(listing.image) %>" alt="Card image cap" style="height: 200px; width: 200px;">
  <div class="card-body">
    <h5 class="card-title"><%= listing.item_name =%></h5>
     <h4 class="card-price">$<%= listing.price =%></h4>
    <a href="/for_sale/<%= listing.id %>" class="btn btn-primary btn-lg btn-block">View</a>
  </div>
</div>

        <% else %>




    <div class="card" style="width: 18rem;">
      <h3>No image to show</h3>
        <div class="card-body">
          <h5 class="card-title"><%= listing.item_name =%></h5>
          <h4>$<%= listing.price =%></h4>
    <a href="/for_sale/<%= listing.id %>" class="btn btn-primary btn-lg btn-block">View</a>
  </div>
</div>


        <% end %>


</div>
    </div>

        <% end %>

        </div>
      </div>
    

    
      
</body>
    
</html>





