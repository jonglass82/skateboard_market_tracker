<!DOCTYPE html>
<html>
  <head>
    <title>SkateboardMarketTracker</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
      

<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css" integrity="sha384-BVYiiSIFeK1dGmJRAkycuHAHRg32OmUcww7on3RYdg4Va+PmSTsz/K68vbdEjh4u" crossorigin="anonymous">
      
</head>
    
<header>

    <nav class="navbar navbar-light">
    <div class="container-fluid">
        
        <div class="navbar-header">
            <a href="main" class="navbar-brand"><b>Skateboard Market Tracker</b></a>
            <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#dropdown">
             <span class="icon-bar"></span>
             <span class="icon-bar"></span>
             <span class="icon-bar"></span>
            </button>
                 
        </div>

        
<div id="dropdown" class="collapse navbar-collapse">
            
    <ul class="nav navbar-nav">
        <li><a href="main">Home</a></li>
        <li><a href="articles">Blog</a></li>
        <li><a href="for_sale">For Sale</a></li>
        <li><a href="wanted">Wanted</a></li>
    </ul>
    
    <ul class="nav navbar-nav navbar-right">
      <li><a href="#">Follow Us On INSTAGRAM <i class="fa fa-instagram"></i></a></li>
    </ul>
    
    </div>
    </div>
      
</nav>

    
</header>


<body>

    <h1>Current Inventory:</h1> 

<button><a href="new_listing">Create a new listing</a></button>



    <% @listings.each do |listing| %>

    <div id="row">
    <div class="col-sm-4">

        <div class="container">
                 
        <% if listing.image.attached? %>

            <%= image_tag(listing.image, height:320, width:200) %>

        <% end %>

        <ul>
            <li><%= listing.item_name %></li>
            <li><%= listing.price %></li>
            <li><%= listing.description %></li>
        </ul>

            <a href="/for_sale/<%= listing.id %>">View Listing</a>

        </div>
    </div>
</div>

    <% end %>
    
      
</body>
    
</html>





